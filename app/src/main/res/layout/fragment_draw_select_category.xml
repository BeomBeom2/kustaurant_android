                    android:layout_height="0dp"
                    android:layout_marginTop="26dp"
                    app:layout_constraintDimensionRatio="360:375"
                    android:padding="2dp"
                    app:layout_constraintTop_toBottomOf="@id/draw_sv_select_type">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/home_category_cl1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/home_btn_all"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.21"
                            app:layout_constraintDimensionRatio="75:83"
                            android:background="@drawable/all_radius_15_none"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

