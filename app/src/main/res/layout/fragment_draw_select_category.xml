                            android:layout_height="0dp"
                            app:layout_constraintWidth_percent="0.21"
                            app:layout_constraintDimensionRatio="75:83"
                            android:background="@drawable/all_radius_15_none"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            app:layout_constraintEnd_toStartOf="@id/home_btn_china"
                            app:layout_constraintStart_toEndOf="@id/home_btn_korea"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
