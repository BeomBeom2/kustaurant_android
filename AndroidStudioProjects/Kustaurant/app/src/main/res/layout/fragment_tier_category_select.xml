                <ToggleButton
                    android:id="@+id/toggle_menu_JH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="제휴업체"
                    android:textOn="제휴업체" />

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:id="@+id/situation_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="상황"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_toggle_group" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/situation_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/situation_label">

                <ToggleButton
                    android:id="@+id/toggle_situation_ALL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="전체"
                    android:textOn="전체" />

                <ToggleButton
                    android:id="@+id/toggle_situation_ONE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="1~2인"
                    android:textOn="1~2인" />

                <ToggleButton
                    android:id="@+id/toggle_situation_TWO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="2~4인"
                    android:textOn="2~4인" />

                <ToggleButton
                    android:id="@+id/toggle_situation_THREE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="5인 이상"
                    android:textOn="5인 이상" />

                <ToggleButton
                    android:id="@+id/toggle_situation_FOUR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="단체 회식"
                    android:textOn="단체 회식" />

                <ToggleButton
                    android:id="@+id/toggle_situation_FIVE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="배달"
                    android:textOn="배달" />

                <ToggleButton
                    android:id="@+id/toggle_situation_SIX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="야식"
                    android:textOn="야식" />

                <ToggleButton
                    android:id="@+id/toggle_situation_SEVEN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="친구 초대"
                    android:textOn="친구 초대" />

                <ToggleButton
                    android:id="@+id/toggle_situation_EIGHT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="데이트"
                    android:textOn="데이트" />

                <ToggleButton
                    android:id="@+id/toggle_situation_NINE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="소개팅"
                    android:textOn="소개팅" />

            </com.google.android.flexbox.FlexboxLayout>
            >

            <TextView
                android:id="@+id/location_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="위치"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/situation_toggle_group" />

            <TextView
                android:id="@+id/location_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/location_info"
                android:textColor="@color/black"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/situation_toggle_group" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/location_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/location_label">

                <ToggleButton
                    android:id="@+id/toggle_location_ALL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="전체"
                    android:textOn="전체" />

                <ToggleButton
                    android:id="@+id/toggle_location_L1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="건입~중문"
                    android:textOn="건입~중문" />

                <ToggleButton
                    android:id="@+id/toggle_location_L2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="중문~어대"
                    android:textOn="중문~어대" />

