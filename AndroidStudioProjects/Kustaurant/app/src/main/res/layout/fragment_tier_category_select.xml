<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.example.kustaurant.presentation.ui.tier.TierViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카테고리"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="종류"
                android:textColor="@color/black"
                android:textSize="17sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_label" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/type_toggle_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/type_label">

                <ToggleButton
                    android:id="@+id/toggle_menu_ALL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="전체"
                    android:textOn="전체" />

                <ToggleButton
                    android:id="@+id/toggle_menu_KO"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="한식"
                    android:textOn="한식" />

                <ToggleButton
                    android:id="@+id/toggle_menu_JA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="일식"
                    android:textOn="일식" />

                <ToggleButton
                    android:id="@+id/toggle_menu_CH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="중식"
                    android:textOn="중식" />

                <ToggleButton
                    android:id="@+id/toggle_menu_WE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="양식"
                    android:textOn="양식" />

                <ToggleButton
                    android:id="@+id/toggle_menu_AS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="아시안"
                    android:textOn="아시안" />

                <ToggleButton
                    android:id="@+id/toggle_menu_ME"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="고기"
                    android:textOn="고기" />

                <ToggleButton
                    android:id="@+id/toggle_menu_CK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="치킨"
                    android:textOn="치킨" />

                <ToggleButton
                    android:id="@+id/toggle_menu_SE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="해산물"
                    android:textOn="해산물" />

                <ToggleButton
                    android:id="@+id/toggle_menu_HP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="햄버거/피자"
                    android:textOn="햄버거/피자" />

                <ToggleButton
                    android:id="@+id/toggle_menu_BS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="분식"
                    android:textOn="분식" />

                <ToggleButton
                    android:id="@+id/toggle_menu_PU"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
                    android:textOff="술집"
                    android:textOn="술집" />

                <ToggleButton
                    android:id="@+id/toggle_menu_CA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="7dp"
                    android:background="@drawable/btn_toggle_background"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:textColor="@color/cement_4"
