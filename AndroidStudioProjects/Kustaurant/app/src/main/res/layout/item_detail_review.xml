<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="21dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_grade"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/rv_grade"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/rv_grade"
        android:text="0.0"/>

    <ImageView
        android:id="@+id/iv_user_image"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/rv_grade"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="역병"
        app:layout_constraintStart_toEndOf="@id/iv_user_image"
        app:layout_constraintTop_toTopOf="@id/iv_user_image"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_image"/>

    <View
        android:id="@+id/view_center"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@color/cement_3"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        app:layout_constraintStart_toEndOf="@id/tv_user_name"/>

    <TextView
        android:id="@+id/tv_review_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/view_center"
        app:layout_constraintTop_toTopOf="@id/tv_user_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
        android:text="30초전"/>

    <ImageView
        android:id="@+id/detail_iv_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintTop_toTopOf="@id/tv_review_time"
        app:layout_constraintBottom_toBottomOf="@id/tv_review_time"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_dots"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:backgroundTint="@color/cement_4"
        android:background="@drawable/all_radius_13_white"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/detail_iv_dots"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="신고하기"/>

            <ImageView
                android:id="@+id/iv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_report"
                android:layout_marginStart="38dp"
                app:layout_constraintTop_toTopOf="@id/tv_report"
                app:layout_constraintBottom_toBottomOf="@id/tv_report"
                app:layout_constraintStart_toEndOf="@id/tv_report"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_report">

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="삭제하기"/>

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_marginStart="38dp"
                app:layout_constraintStart_toEndOf="@id/tv_delete"
                app:layout_constraintTop_toTopOf="@id/tv_delete"
                app:layout_constraintBottom_toBottomOf="@id/tv_delete"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그냥저냥 괜찮괜찮 무난무난"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@id/iv_user_image"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_like"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_review"/>

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_like"
        app:layout_constraintTop_toTopOf="@id/iv_like"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        android:layout_marginStart="4dp"
        android:text="1233"/>

    <ImageView
        android:id="@+id/iv_hate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_hate"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/tv_like"
        app:layout_constraintTop_toTopOf="@id/iv_like"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"/>

    <TextView
        android:id="@+id/tv_hate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_hate"
        app:layout_constraintTop_toTopOf="@id/iv_like"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        android:layout_marginStart="4dp"
        android:text="1233"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment"
        app:layout_constraintTop_toTopOf="@id/iv_like"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintStart_toEndOf="@id/tv_hate"
        android:layout_marginStart="12dp"/>

    <View
        android:id="@+id/view_content"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cement_3"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@id/detail_rv_reply"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/detail_rv_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_detail_review_reply"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/iv_like"/>

</androidx.constraintlayout.widget.ConstraintLayout>